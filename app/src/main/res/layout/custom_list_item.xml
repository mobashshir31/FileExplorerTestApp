<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/folder_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/fileInfoText"
        android:text="File Info"
        android:textSize="12sp"
        android:layout_width="260dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/fileNameText"
        android:layout_toRightOf="@+id/fileImageView"
        android:layout_toEndOf="@+id/fileImageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/fileNameText"
        android:text="File Name"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_alignTop="@+id/fileImageView"
        android:layout_alignLeft="@+id/fileInfoText"
        android:layout_alignStart="@+id/fileInfoText"
        android:minHeight="30dp"
        android:maxHeight="35dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="260dp" />

</RelativeLayout>